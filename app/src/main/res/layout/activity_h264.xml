<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".h264.H264Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/h264Encoder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="编码视频(开启屏幕录制)"
            android:visibility="visible" />

        <Button
            android:id="@+id/h264EncoderClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="编码视频(结束屏幕录制)"
            android:visibility="visible" />

        <Button
            android:id="@+id/h264Decoder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="解码视频" />

        <Button
            android:id="@+id/h264DecoderBitmap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="解码视频图片展示" />

        <ImageView
            android:id="@+id/h264PlayerImage"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <SurfaceView
            android:id="@+id/h264PlayerPreview"
            android:layout_width="368dp"
            android:layout_height="384dp" />



    </LinearLayout>
</ScrollView>